<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.leleyouba.ybshop.classify.ClassifyFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_classify_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/aar" />

        <SearchView
            android:id="@+id/search_classify_show"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="#FFF0FAF5"
            android:gravity="center_vertical"
            android:iconifiedByDefault="false"
            android:queryHint="请输入搜索内容">

        </SearchView>

        <ImageView
            android:id="@+id/iv_search_communate"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/aj0" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <q.rorbin.verticaltablayout.VerticalTabLayout
            android:id="@+id/vertical_tab_classify"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#EDEDED"
            android:visibility="visible"
            app:indicator_color="#FFDBF7F6"
            app:indicator_gravity="fill"
            app:tab_height="50dp"
            app:tab_mode="scrollable">

        </q.rorbin.verticaltablayout.VerticalTabLayout>

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="#FFDBF7F6" />

        <com.android.leleyouba.ybshop.classify.util.HorizonVerticalViewPager
            android:id="@+id/vp_classify_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFDBF7F6"
            app:isVertical="true">

        </com.android.leleyouba.ybshop.classify.util.HorizonVerticalViewPager>

    </LinearLayout>

</LinearLayout>
