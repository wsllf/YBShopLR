<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.leleyouba.ybshop.mine.activity.SettingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="设置"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rl_setting_loadImg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolBar_setting">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:text="非WLAN环境下手动下载图片"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switch_loadImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:id="@+id/view_setting_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFC7C6C6"
        android:layout_below="@id/rl_setting_loadImg">

    </View>
    <RelativeLayout
        android:id="@+id/rl_setting_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view_setting_one">

        <Switch
            android:id="@+id/switch_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="WLAN环境下自动升级客户端"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView" />
    </RelativeLayout>

    <View
        android:id="@+id/view_setting_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFC7C6C6"
        android:layout_below="@id/rl_setting_update">

    </View>
    <RelativeLayout
        android:id="@+id/rl_setting_clear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view_setting_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:text="清除本地缓存"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_setting_localCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:text="缓存"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_setting_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/forward_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/view_setting_show"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/rl_setting_clear"
        android:background="#FFDBF5F4">

    </View>

    <RelativeLayout
        android:id="@+id/rl_setting_recommend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view_setting_show">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:text="应用推荐"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/forward_arrow" />
    </RelativeLayout>
    <View
        android:id="@+id/view_setting_three"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFC7C6C6"
        android:layout_below="@id/rl_setting_recommend">

    </View>
    <RelativeLayout
        android:id="@+id/rl_setting_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rl_setting_recommend">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:text="关于"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/forward_arrow" />
    </RelativeLayout>
    <View
        android:id="@+id/view_setting_four"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFC7C6C6"
        android:layout_below="@id/rl_setting_about">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl_setting_about"
        android:background="#FFDBF5F4"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_setting_exitLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="#FFF95757"
            android:visibility="gone"
            android:text="退出登录"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>
