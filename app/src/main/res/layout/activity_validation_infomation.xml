<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_retrieve_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.leleyouba.ybshop.mine.activity.ValidationInformationActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_verify_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="验证信息"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/ll_verify_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolBar_verify"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="14dp"
            android:text="验证问题"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_verify_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="问题？"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:id="@+id/view_verify_line_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_verify_question"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="#FFC6C5C5" />

    <LinearLayout
        android:id="@+id/ll_verify_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_verify_line_two"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:text="答案"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et_verify_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入答案"
            android:textCursorDrawable="@drawable/et_cursor"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_verify_answer_clear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@mipmap/img_cancel"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/view_verify_line_three"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_verify_answer"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="#FFC6C5C5" />

    <Button
        android:id="@+id/btn_verify_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_verify_line_three"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:text="下一步" />
</RelativeLayout>
