<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.leleyouba.ybshop.mine.activity.NewPWDActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_newPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="新密码"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp" />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/ll_newPwd_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:text="账号"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et_newPwd_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入用户名"
            android:lines="1"
            android:textCursorDrawable="@drawable/et_cursor" />

        <ImageView
            android:id="@+id/iv_newPwd_account_clear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@mipmap/img_cancel"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/view_newPwd_line_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_newPwd_account"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="#FFC6C5C5" />

    <LinearLayout
        android:id="@+id/ll_newPwd_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_newPwd_line_one"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:text="密码"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et_newPwd_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:lines="1"
            android:textCursorDrawable="@drawable/et_cursor" />

        <ImageView
            android:id="@+id/iv_newPwd_pwd_clear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@mipmap/img_cancel"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_newPwd_pwd_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@mipmap/close_eye" />
    </LinearLayout>

    <View
        android:id="@+id/view_newPwd_line_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_newPwd_pwd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="#FFC6C5C5" />

    <LinearLayout
        android:id="@+id/ll_newPwd_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_newPwd_line_two"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="21dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="14dp"
            android:text="确认密码"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et_newPwd_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:lines="1"
            android:textCursorDrawable="@drawable/et_cursor" />

        <ImageView
            android:id="@+id/iv_newPwd_confirm_clear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@mipmap/img_cancel"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_newPwd_confirm_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@mipmap/close_eye" />

    </LinearLayout>

    <View
        android:id="@+id/view_newPwd_line_three"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_newPwd_verification"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="#FFC6C5C5" />

    <Button
        android:id="@+id/btn_newPwd_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_newPwd_line_three"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:text="完成"
        android:textSize="18dp" />

</RelativeLayout>
