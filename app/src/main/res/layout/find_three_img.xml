<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_find_threeImg_img_one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_find_threeImg_img_one"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@mipmap/user_bg_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="10dp"
                android:alpha="0.5"
                android:background="#000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_find_threeImg_theme_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="武装牙齿"
                    android:textColor="#ffffff" />
            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_find_threeImg_content_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="从此拒绝大黄牙"
            android:textColor="#000000"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_find_threeImg_img_two"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_find_threeImg_img_two"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@mipmap/user_bg_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="10dp"
                android:alpha="0.5"
                android:background="#000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_find_threeImg_theme_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="武装牙齿"
                    android:textColor="#ffffff" />
            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_find_threeImg_content_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="从此拒绝大黄牙"
            android:textColor="#000000"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_find_threeImg_img_three"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_find_threeImg_img_three"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@mipmap/user_bg_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="10dp"
                android:alpha="0.5"
                android:background="#000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_find_threeImg_theme_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一武装牙齿一"
                    android:textColor="#ffffff" />
            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_find_threeImg_content_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="从此拒绝大黄牙"
            android:textColor="#000000"
            android:textStyle="normal" />
    </LinearLayout>


</LinearLayout>
