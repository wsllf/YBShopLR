<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.leleyouba.ybshop.mine.activity.RegisterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="有吧注册"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/ll_register_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:text="账号"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_register_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入用户名"
            android:lines="1"
            android:textCursorDrawable="@drawable/et_cursor" />

        <ImageView
            android:id="@+id/iv_register_account_clear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@mipmap/img_cancel"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/view_register_line_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_register_account"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="#FFC6C5C5" />

    <LinearLayout
        android:id="@+id/ll_register_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_register_line_one"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:text="密码"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_register_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:lines="1"
            android:textCursorDrawable="@drawable/et_cursor" />

        <ImageView
            android:id="@+id/iv_register_pwd_clear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@mipmap/img_cancel"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_register_pwd_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@mipmap/close_eye" />
    </LinearLayout>

    <View
        android:id="@+id/view_register_line_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_register_pwd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="#FFC6C5C5" />

    <LinearLayout
        android:id="@+id/ll_register_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_register_line_two"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="14dp"
            android:text="确认密码"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_register_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:lines="1"
            android:textCursorDrawable="@drawable/et_cursor" />

        <ImageView
            android:id="@+id/iv_register_confirm_clear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@mipmap/img_cancel"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_register_confirm_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@mipmap/close_eye" />
    </LinearLayout>

    <View
        android:id="@+id/view_register_line_three"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_register_confirm"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="#FFC6C5C5" />

    <LinearLayout
        android:id="@+id/ll_register_phoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_register_line_three"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="14dp"
            android:text="电话号码"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_register_phoneNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入电话号码"
            android:lines="1"
            android:textCursorDrawable="@drawable/et_cursor" />

        <ImageView
            android:id="@+id/iv_register_phoneNum_clear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@mipmap/img_cancel"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/view_register_line_four"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_register_phoneNum"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="#FFC6C5C5" />

    <LinearLayout
        android:id="@+id/ll_register_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_register_line_four"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="31dp"
            android:text="验证码"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_register_verification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:lines="1"
            android:textCursorDrawable="@drawable/et_cursor" />

        <ImageView
            android:id="@+id/iv_register_verification_clear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@mipmap/img_cancel"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_register_verification"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@mipmap/ic_launcher" />
    </LinearLayout>

    <View
        android:id="@+id/view_register_line_five"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_register_verification"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="#FFC6C5C5" />

    <Button
        android:id="@+id/btn_register_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_register_line_five"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:text="注册"
        android:textSize="18dp" />
</RelativeLayout>
